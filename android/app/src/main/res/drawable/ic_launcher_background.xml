<?xml version="1.0" encoding="UTF-8"?>
<svg width="192" height="192" viewBox="0 0 192 192" xmlns="http://www.w3.org/2000/svg">
  <!-- Fondo negro -->
  <rect width="192" height="192" fill="#1a1a1a"/>
  
  <!-- Gradiente de fondo sutil -->
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2d2d2d;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0d0d0d;stop-opacity:1" />
    </linearGradient>
    
    <linearGradient id="carGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#4a90e2;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2e5c8a;stop-opacity:1" />
    </linearGradient>
    
    <linearGradient id="accentGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#d4af37;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#b8941f;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Aplicar gradiente de fondo -->
  <rect width="192" height="192" fill="url(#bgGradient)"/>
  
  <!-- Auto estilizado - perfil lateral -->
  <g transform="translate(96, 100)">
    <!-- Cuerpo del auto -->
    <rect x="-45" y="-15" width="90" height="25" rx="3" fill="url(#carGradient)"/>
    
    <!-- Capó -->
    <path d="M -45 -15 Q -40 -28 -20 -32 L 20 -32 Q 35 -28 40 -18 L 40 -15 Z" fill="url(#carGradient)"/>
    
    <!-- Parabrisas -->
    <ellipse cx="-15" cy="-25" rx="12" ry="8" fill="#1a1a1a" opacity="0.5"/>
    
    <!-- Ventana trasera -->
    <ellipse cx="20" cy="-23" rx="10" ry="7" fill="#1a1a1a" opacity="0.5"/>
    
    <!-- Ruedas -->
    <circle cx="-25" cy="12" r="8" fill="#1a1a1a"/>
    <circle cx="25" cy="12" r="8" fill="#1a1a1a"/>
    
    <!-- Detalles de ruedas -->
    <circle cx="-25" cy="12" r="5" fill="#4a4a4a"/>
    <circle cx="25" cy="12" r="5" fill="#4a4a4a"/>
    
    <!-- Línea dorada de acento -->
    <line x1="-45" y1="-18" x2="45" y2="-18" stroke="url(#accentGradient)" stroke-width="2"/>
    
    <!-- Faro delantero -->
    <circle cx="38" cy="-8" r="4" fill="#d4af37" opacity="0.8"/>
  </g>
  
  <!-- Texto "De Grazia" -->
  <text x="96" y="165" font-family="Arial, sans-serif" font-size="14" font-weight="bold" text-anchor="middle" fill="#d4af37" letter-spacing="2">
    DE GRAZIA
  </text>
  
  <!-- Subtítulo -->
  <text x="96" y="180" font-family="Arial, sans-serif" font-size="8" text-anchor="middle" fill="#4a90e2" letter-spacing="1">
    AUTOMOTORES
  </text>
</svg>
